<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.ScrollingFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonPernambuco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Pernambuco"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonAngra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimaryDark2"
            android:text="Angra dos reis"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonNatal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimaryDark3"
            android:text="Natal"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonAmazonia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimaryDark4"
            android:text="Amazonia"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonNoruega"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimaryDark5"
            android:text="Noruega"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonSaoPaulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimaryDark6"
            android:text="SÃ£o Paulo"
            android:textAllCaps="false"
            android:textSize="22sp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>